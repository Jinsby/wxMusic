/* components/song-menu-item/index.wxss */
.item {
  width: 220rpx;
}

.top {
  /* height: 220rpx; */
  position: relative;
}

.play-counter {
  color: #fff;
  background-color: #404042;
  opacity: 0.8;
  font-size: 22rpx;
  padding: 8rpx 8rpx;
  border-radius: 17rpx;
  position: absolute;
  right: 4rpx;
  bottom: 10rpx;

}

.image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}

.bottom {
  width: 100%;
  font-size: 28rpx;
  margin-right: 6rpx;


  /* 显示两行 */
  text-overflow: ellipsis;
  /* 省略号 */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  /* 显示两行 */
  overflow: hidden;
  /* 溢出隐藏 */
}