/* components/song-menu-area/index.wxss */
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.menu-list {
  /* 视口宽度 */
  width: 100vw;
  white-space: nowrap;
}

.menu-item {
  display: inline-block;
  /* 顶部对齐 */
  vertical-align: top;
  margin-left: 20rpx;
}

.menu-item:last-of-type {
  margin-right: 20rpx;
}