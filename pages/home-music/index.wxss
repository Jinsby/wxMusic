/* pages/home-music/index.wxss */

.scroll-view {
  width: 105vw;
  position: absolute;
  overflow-x: hidden;
  height: 100vh;
  padding-bottom: 20rpx;
}

.box {
  width: 100vw;
  position: absolute;
  top: 0;
  left: 0;
}


page {
  padding-top: 54px;
}

.song-list {
  padding: 0 25rpx;
}


.swiper {
  padding-bottom: 10rpx;
  width: 100%;
  overflow: hidden;
  transform: translateY(0);
}

.swiper-item {
  display: flex;
  flex: 1;
}

