/* 播放工具栏 play-bar */
.play-bar-pla {
  height: 44px;
}

.play-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;

  position: fixed;
  left: 0;
  right: 0;
  height: 44px;
  bottom: 0;

  background: #fff;

  margin: 0 25rpx;
  border-radius: 53rpx;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.3);
}

.play-bar .left,
.play-bar .right {
  display: flex;
  align-items: center;
}

.play-bar .right {
  margin-right: 26rpx;
}

.play-bar .left .album {
  position: relative;
  top: -10rpx;
  left: -2rpx;
  width: 54px;
  height: 54px;
  border-radius: 15%;
}



.play-bar .left .name {
  font-size: 14px;
  margin-left: 30rpx;
  color: #fff;
}
.name{
  flex: 1;
}
.play-bar .right .icon {
  width: 30px;
  height: 30px;
}

.play-bar .right .play {
  width: 25px;
  height: 25px;
  margin-right: 10rpx;
}

.bg-image,
.bg-covoer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 45rpx;
}

.bg-covoer {
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(40px);
}

/* 动画 */
@keyframes albumRotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

