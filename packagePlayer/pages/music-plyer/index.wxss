.popup .popup-title {
  padding: 30rpx 30rpx;
  font-size: 35rpx;
  color: #000000;
  font-weight: 600;
}

.popup .item {
  display: flex;
  flex-direction: column;
}

.popup .popup-item {
  border-top: 0.5px solid #d6d6d6;
  padding: 25rpx 10rpx;
  display: flex;
  justify-content: space-between;
}

.popup .popup-item .Listinfo {
  padding: 0 40rpx;
  font-size: 30rpx;
}

.popup .popup-item .image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 40rpx;
}

.popup .pop-ar {
  color: #9c9c9c;
}